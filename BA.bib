	number = {1},
	journaltitle = {Archives of Civil and Mechanical Engineering},
	shortjournal = {Archiv.Civ.Mech.Eng},
	author = {Miano, Andrea and Fiorillo, Antimo and Salzano, Antonio and Prota, Andrea and Jacobsson, Richard},
