@thesis{ZIMMERMANN,
	title = {Efficiency studies of a liquid-scintillator detector based on Wavelengthshifting Optical Modules},
	abstract = {Search for Hidden Particles ({SHiP}) is a proposed Intensity Frontier experiment,
which is planned to be located at the {CERN} Super Proton Synchrotron. By using
large amounts of 400 {GeV} protons, it aims to explore domains of feebly interacting
long-lived neutral particles with masses between 0.1 {GeV} and 10 {GeV}. To suppress
background events, crucial parts of the experiment are covered by a large-area particle detector, also known as Surrounding Background Tagger ({SBT}). A possible
implementation for the {SBT} is given by a multicell liquid-scintillator layout instrumented with Wavelength-shifting Optical Modules ({WOMs}), which are viewed by
Silicon photomultipliers ({SiPMs})
This thesis studies the particle detection efficiency of a cell-sized prototype using
measurements with electrons at the {DESY} {II} synchrotron in 2019. It presents a revised data processing algorithm, which is able to achieve consistent results throughout different measurement setups. Furthermore, a newly designed fixation system
prevents the displacement of the {WOM} components while maximizing the optical
contact at the {WOM}-{SiPM} interface. A new cover not only offers more protection
against residual light, but also allows the readout electronics to be included, which
results in an improved stability.
The prototype was able to detect 2.6 {GeV} (5.2 {GeV}) electrons hitting the detector
front at an angle of incidence of 0
◦ with a probability of 99.9\% at distances between
electron beam and {WOM} of 600 mm (700 mm). Compared to previous studies performed in 2019 with the same detector prototype, an up to 0.6\% higher detection
efficiency was measured for 5.2 {GeV} electrons.},
	institution = {Humboldt-University Berlin},
	type = {Master Thesis},
	author = {{Jan Zimmermann}},
	date = {2020},
	langid = {english},
	file = {Jan - Effizienzstudien eines auf wellenlängenschiebenden.pdf:D\:\\Eigene_Dateien\\Zotero\\storage\\7RG8NNGF\\Jan - Effizienzstudien eines auf wellenlängenschiebenden.pdf:application/pdf}
}

@thesis{ZACHARIAS,
	title = {Efficiency measurement of a transparency-improved liquid-scintillator detector with {SiPM}-{WOM} readout},
	abstract = {This thesis was written in the context of the proposed {SHiP} experiment. The goal
of this experiment is to detect particles that are only interakting very weakly with
standard model particles. Therefore, a highly efficient background suppression is
crucial, because interactions with these new particles would only occurr extremely
rarely. The proposed solution for this problem is the so-called surrounding background
tagger ({SBT}). The {SBT} is supposed to surround the decay volume in which these
interactions would take place. It operates as a {WOM}-based liquid scintillation
detector and is divided into multiple cells holding two wavelength shifting optical
modules ({WOMs}) each. The readout is done using silicone photomultipliers ({SiPMs}).
The purpose of this thesis was the comparison of the detector efficiency using liquid
scintillator with purified {LAB} as a solvent with non-purified one. In a detectorbox
smaller than the cells of the proposed layout, the detection of cosmic muons was
studied. The scintillator box was equipped with a single Wavelenght-shifting Optical
Module ({WOM}) and an array of 40 Hamamatsu S13360 {SiPMs}. The signals are
then preprocessed by an {eMUSIC} board and eventually digitised by a {WaveCatcher}
digitizer. The raw data is then analysed using different {ROOT} routines.
The efficiencies of approximately 99.0 \% measured this way where about 0.8 \%
smaller than efficiencies measured using different setups. They did not differ by
more than the uncertainties of less than 0.1 percent. The reason for the large number
of low Npe events could not be determined. However, the light yield of the purified
scintillator is approximately 25 percent higher than that of the non-purified one.},
	institution = {Humboldt-University Berlin},
	type = {Bachelor Thesis},
	author = {{Max Zacharias}},
	date = {2021},
	file = {Bachelorarbeit_zacharias.pdf:D\:\\Eigene_Dateien\\Zotero\\storage\\2BINE9HZ\\Bachelorarbeit_zacharias.pdf:application/pdf}
}

